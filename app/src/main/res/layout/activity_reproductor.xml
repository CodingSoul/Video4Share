<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/fondo_verde"
    tools:context="com.jesusmartin92.ffmpegandroid.Reproductor">


    <VideoView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/videoView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        fab:fab_addButtonColorNormal="@color/logo_verde_claro"
        fab:fab_addButtonColorPressed="@color/white_pressed"
        fab:fab_addButtonPlusIconColor="@color/white"
        fab:fab_labelStyle="@style/menu_labels_style"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/toAAC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/logo_verde_claro"
            fab:fab_title="Extraer audio"
            fab:fab_icon="@drawable/ic_action_volume_on"
            fab:fab_colorPressed="@color/white_pressed"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/extractImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/logo_verde_claro"
            fab:fab_title="Extraer fotograma"
            fab:fab_icon="@drawable/ic_action_picture"
            fab:fab_colorPressed="@color/white_pressed"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/removeAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/logo_verde_claro"
            fab:fab_title="Quitar audio (Silenciar)"
            fab:fab_icon="@drawable/ic_action_volume_muted"
            fab:fab_colorPressed="@color/white_pressed"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/slowDownVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/logo_verde_claro"
            fab:fab_title="Ralentizar/Acelerar video"
            fab:fab_icon="@drawable/ic_action_fast_forward"
            fab:fab_colorPressed="@color/white_pressed"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/cutVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/logo_verde_claro"
            fab:fab_title="Recortar video"
            fab:fab_icon="@drawable/ic_action_cut"
            fab:fab_colorPressed="@color/white_pressed"/>



    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/convert_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_addButtonColorNormal="@color/logo_verde_oscuro"
        fab:fab_addButtonColorPressed="@color/white_pressed"
        fab:fab_addButtonPlusIconColor="@color/white"
        fab:fab_labelStyle="@style/menu_labels_style"
        android:layout_alignBottom="@+id/multiple_actions"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        fab:fab_labelsPosition="right"
        >

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/toGIF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            fab:fab_colorNormal="@color/logo_verde_claro"
            fab:fab_title="Convertir a GIF"
            fab:fab_colorPressed="@color/white_pressed"
            fab:fab_icon="@drawable/ic_action_repeat"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/toMP4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            fab:fab_colorNormal="@color/logo_verde_claro"
            fab:fab_title="Convertir a MP4"
            fab:fab_colorPressed="@color/white_pressed"
            fab:fab_icon="@drawable/ic_action_repeat"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/toAVI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            fab:fab_colorNormal="@color/logo_verde_claro"
            fab:fab_title="Convertir a AVI"
            fab:fab_colorPressed="@color/white_pressed"
            fab:fab_icon="@drawable/ic_action_repeat"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/toMOV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            fab:fab_colorNormal="@color/logo_verde_claro"
            fab:fab_title="Convertir a MOV"
            fab:fab_colorPressed="@color/white_pressed"
            fab:fab_icon="@drawable/ic_action_repeat"/>


        </com.getbase.floatingactionbutton.FloatingActionsMenu>


</RelativeLayout>
